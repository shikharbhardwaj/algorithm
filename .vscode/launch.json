        },
        {
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "externalConsole": false,
            "logging": {
                "trace": true
            },
            "name": "lldb - Build and debug active file (macos)",
            "type": "cppdbg",
            "request": "launch",
            "args": [
                "-I",
                "/Users/shikharbhardwaj/custom/include"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
